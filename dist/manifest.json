{
	"name": "Article Note Taker",
	"description": "Extracts text from open tabs and generates notes using OpenAI.",
	"version": "1.0",
	"manifest_version": 3,
	"icons": {
		"16": "/assets/icon16.png",
		"32": "/assets/icon32.png",
		"48": "/assets/icon48.png",
		"128": "/assets/icon128.png"
	},
	"permissions": [
		"storage",
		"tabs",
		"<all_urls>",
		"activeTab",
		"scripting",
		"downloads",
		"background"
	],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_icon": {
			"16": "/assets/icon16.png"
		}
	},
	"browser_action": {
		"default_icon": "icon.png"
	},
	"web_accessible_resources": [
		{
	    "resources": ["youtube.js"],
			"matches": ["*://*.youtube.com/*"]
		}
	]
}
